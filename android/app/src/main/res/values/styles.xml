<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MediumTitleTextView" parent="TextAppearance.AppCompat.Title">
       <!-- <item name="fontFamily">@font/fredoka_medium</item>-->
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/ebony</item>
    </style>

    <style name="RegularSmallTitleTextView" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/fredoka_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/ebony</item>
    </style>



    <style name="CustomEdittext" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/fredoka_regular</item>
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#0055B8</item>
        <item name="android:textColorHint">@color/shuttle_gray_50</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

    <style name="CustomLongButton" parent="TextAppearance.AppCompat.Widget.Button">
        <!-- <item name="fontFamily">@font/fredoka_medium</item>-->
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/custom_long_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- ToolBar -->
    <style name="toolbar_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/fredoka_medium</item>
        <item name="android:textSize">17sp</item>

    </style>



</resources>